{
  "name": "super-ralph",
  "version": "0.3.1",
  "description": "Reusable Ralph workflow pattern - ticket-driven development with multi-agent review loops",
  "author": "William Cory",
  "license": "MIT",
  "type": "module",
  "module": "src/index.ts",
  "bin": {
    "ralphinho": "src/cli/ralphinho.ts"
  },
  "exports": {
    ".": "./src/index.ts",
    "./selectors": "./src/selectors.ts",
    "./components": "./src/components/index.ts",
    "./scheduled": "./src/scheduled/index.ts",
    "./scheduled/schemas": "./src/scheduled/schemas.ts",
    "./cli/clarifications": "./src/cli/clarifications.ts"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "bun": ">=1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/evmts/super-ralph.git"
  },
  "bugs": {
    "url": "https://github.com/evmts/super-ralph/issues"
  },
  "homepage": "https://github.com/evmts/super-ralph#readme",
  "keywords": [
    "ai",
    "workflow",
    "orchestration",
    "ralph",
    "multi-agent",
    "tdd",
    "code-review"
  ],
  "scripts": {
    "gen:mdx-types": "bun scripts/gen-mdx-types.ts",
    "typecheck": "bun scripts/gen-mdx-types.ts && tsc --noEmit",
    "cli": "bun run src/cli/ralphinho.ts"
  },
  "peerDependencies": {
    "smithers-orchestrator": "^0.9.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.2.0",
    "bun-types": "^1.3.9",
    "remark-mdx": "^3.1.1",
    "remark-parse": "^11.0.0",
    "typescript": "^5.6.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.1.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@opentui/core": "^0.1.81",
    "better-sqlite3": "^11.0.0"
  }
}
